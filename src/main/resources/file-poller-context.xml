<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"

              xmlns:context="http://www.springframework.org/schema/context"
              xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context
                           http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config />
    <context:component-scan base-package="file.watcher.processor;file.watcher.parser;
file.watcher.handler" />
    <bean abstract="true" class="file.watcher.processor.AbstractFileProcessor"/>
    <bean class="file.watcher.processor.HiearchyPortforlioProcessor">
        <property name="filePattern" value="test.*\.csv"/>
        <property name="fileParser" ref="hiearchyParser"/>
    </bean>

    <bean class="file.watcher.CSVFileParser" id="csvParser" abstract="true"/>

<bean class="file.watcher.HiearchyPortfolioParser" id="hiearchyParser"/>
</beans>